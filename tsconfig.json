{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "noEmitOnError": false //Gambiarra Profissional (by Gemini)
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}