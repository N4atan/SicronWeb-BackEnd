{
  "$schema": "https://raw.githubusercontent.com/swc-project/swc/master/node-swc.json",
  "jsc": {
    "target": "es2022",
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decoratorsBeforeExport": true,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "keepClassNames": true,
    "loose": true 
  },
  "module": {
    "type": "commonjs",
    "strict": true,
    "strictMode": true,
    "noInterop": false,
    "resolveFully": true,
    "outFileExtension": "js"
  },
  "sourceMaps": false
}
