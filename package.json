{
  "name": "api",
  "version": "1.0.0",
  "description": "API backend com TypeScript e Express",
  "main": "dist/server.js",
  "scripts": {
    "build": "swc src -d dist --strip-leading-paths",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "reset-db": "tsx src/scripts/reset-db.ts",
    "check-db": "tsx @swc-node/register src/scripts/check-db.ts",
    "lint": "eslint .",
    "format": "clang-format -i -style=file --glob=\"src/**/*.ts\" --glob=\"src/**/*.js\"",
    "typecheck": "swc src --noEmit",
    "docs": "npm run docs:html",
    "docs:html": "typedoc --out docs/html",
    "docs:md": "typedoc --out docs/markdown --plugin typedoc-plugin-markdown",
    "test:runtime": "node tests/run.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.6.0",
    "clang-format": "^1.8.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "ts-node-dev": "^2.0.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "dependencies": {
    "@types/redis": "^4.0.10",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.1",
    "reflect-metadata": "^0.2.2",
    "typedoc": "^0.28.15",
    "typeorm": "^0.3.27"
  }
}
